{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"singleAttributePerLine": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@components/(.*)$",
		"^@hooks/(.*)$",
		"^@pages/(.*)$",
		"^@network$",
		"^@/api/(.*)$",
		"^@/types/(.*)$",
		"^@/services(.*)$",
		"^@/config/(.*)$",
		"^[../]",
		"^[./]",
		"^(.css)$",
		"^(.scss)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
